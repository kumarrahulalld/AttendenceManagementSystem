<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AC1B2A"
    tools:context=".Remove_Faculty">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="20sp"
        android:gravity="center"
        android:text="Remove Faculty"
        android:textColor="@android:color/white"
        android:textColorHighlight="#00FAF7F7"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_faculty"
        android:layout_width="0dp"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="20sp"

        android:background="#FF9800"
        android:ems="10"
        android:hint="Choose Course"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:padding="10sp"
        android:spinnerMode="dropdown"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/black"
        android:textColorLink="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/remove_student"
        android:layout_width="0dp"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="20sp"

        android:background="#FF9800"
        android:ems="10"
        android:onClick="removeFaculty"
        android:text="Remove"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_faculty" />
</androidx.constraintlayout.widget.ConstraintLayout>